<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9fbb58"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/textview_createComment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="17dip"
        android:text="Comment"
        android:textStyle="bold|italic"
        android:layout_weight="2"/>

    <EditText
        android:id="@+id/create_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:paddingTop="20dip"
        android:paddingBottom="30dip"
        android:lines="4"
        android:gravity="top"
        android:background="@xml/border"
        android:hint="  comment"
        android:layout_weight="10"/>



    <Button
        android:id="@+id/createC"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@xml/button_curve2"
        android:text="Post Comment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="30"/>

</LinearLayout><!-- From: file:/D:/AndroidStudioProjects/15-After%20Deadline/DCUClubsAndSocs/app/src/main/res/layout/create_comment.xml -->