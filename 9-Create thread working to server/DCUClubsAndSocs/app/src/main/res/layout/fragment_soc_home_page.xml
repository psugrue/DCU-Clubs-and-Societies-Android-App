<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#e9e8dd"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.college.dcuclubsandsocs.SocHomePageActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/socHomeTitle"
        android:text="Society Homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
    />

    <Button
        android:id="@+id/create_threadPage"
        android:layout_width="720px"
        android:layout_below="@+id/socHomeTitle"
        android:layout_height="wrap_content"
        android:background="@xml/button_curve"
        android:text="Create Thread" />

    <ListView
        android:id="@+id/listview_threads"
        android:layout_marginTop="170px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"

     />

</RelativeLayout>
