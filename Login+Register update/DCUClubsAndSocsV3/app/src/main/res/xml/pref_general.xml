<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_default_location"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/pref_notifications_label"
        android:key="@string/pref_notifications_key"
        android:defaultValue="@string/pref_notifications_default"
        android:entryValues="@array/pref_notifications_values"
        android:entries="@array/pref_notifications_options"/>

</PreferenceScreen>